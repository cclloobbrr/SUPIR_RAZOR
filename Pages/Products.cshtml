@page
@model SUPIR_RAZOR.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";
}

<!-- Форма добавления -->
<form method="post">
    <div>
        <label>
            Name:
            <input asp-for="NewProduct.Name" />
        </label>
    </div>
    <div>
        <label>
            Material:
            <input asp-for="NewProduct.Material" />
        </label>
    </div>
    <div>
        <label>
            Price:
            <input asp-for="NewProduct.Price" />
        </label>
    </div>
    <button type="submit">Add Product</button>
</form>
