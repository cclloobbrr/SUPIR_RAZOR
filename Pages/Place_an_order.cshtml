@page
@model SUPIR_RAZOR.Pages.Place_an_orderModel
@{
}

<form method="post">
    <!-- Таблица с данными -->
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Material</th>
                <th>Price</th>
                <th>Available</th>
                <th>Order Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Material</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Quantity</td>
                    <td>
                        <input type="number"
                               name="OrderQuantities[@product.Id]"
                               min="0"
                               max="@product.Quantity"
                               value="@Model.OrderQuantities[product.Id]"
                               class="form-control order-quantity"
                               style="width: 80px;" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <label asp-for="Customer.Name"></label>
        <input asp-for="Customer.Name" class="form-control" />
        <span asp-validation-for="Customer.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Customer.PhoneNumber"></label>
        <input asp-for="Customer.PhoneNumber" class="form-control" />
        <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Place Order</button>
</form>


